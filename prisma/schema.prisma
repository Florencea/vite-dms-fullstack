generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.sqlite"
}

model User {
  pid       Int       @id @default(autoincrement())
  id        String    @unique @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  account   String    @unique
  password  String
  email     String    @unique
  name      String
  phone     String?
  website   String?
  posts     Post[]
  albums    Album[]
  todos     Todo[]
}

model Post {
  pid       Int       @id @default(autoincrement())
  id        String    @unique @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  title     String
  body      String?
  user      User      @relation(fields: [userId], references: [pid])
  userId    Int
  comments  Comment[]
}

model Comment {
  pid       Int       @id @default(autoincrement())
  id        String    @unique @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  name      String
  email     String
  body      String?
  postId    Int
  post      Post      @relation(fields: [postId], references: [pid])
}

model Album {
  pid       Int       @id @default(autoincrement())
  id        String    @unique @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  title     String
  userId    Int
  user      User      @relation(fields: [userId], references: [pid])
  photos    Photo[]
}

model Photo {
  pid       Int       @id @default(autoincrement())
  id        String    @unique @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  url       String
  albumId   Int
  albums    Album     @relation(fields: [albumId], references: [pid])
}

model Todo {
  pid       Int       @id @default(autoincrement())
  id        String    @unique @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  title     String
  completed Boolean
  userId    Int
  user      User      @relation(fields: [userId], references: [pid])
}
