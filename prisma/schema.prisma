generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model I18n {
  id         String   @id @default("generated by cuid2 extension")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  code       String
  value      String
  locale     Locale   @relation(fields: [localeId], references: [id])
  localeId   String
  function   Function @relation(fields: [functionId], references: [id])
  functionId String

  @@unique([code, localeId])
}

model User {
  id         String      @id @default("generated by cuid2 extension")
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  account    String      @unique
  password   String
  email      String      @unique
  name       String
  phone      String?
  website    String?
  posts      Post[]
  albums     Album[]
  todos      Todo[]
  UserGroups UserGroup[]
}

model UserGroup {
  id        String   @id @default("generated by cuid2 extension")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  group     Group    @relation(fields: [groupId], references: [id])
  groupId   String

  @@unique([userId, groupId])
}

model Group {
  id            String          @id @default("generated by cuid2 extension")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  code          String          @unique
  name          String
  editable      Boolean         @default(true)
  UserGroups    UserGroup[]
  GroupFunction GroupFunction[]
}

model GroupFunction {
  id         String   @id @default("generated by cuid2 extension")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  group      Group    @relation(fields: [groupId], references: [id])
  groupId    String
  function   Function @relation(fields: [functionId], references: [id])
  functionId String

  @@unique([groupId, functionId])
}

model Function {
  id            String          @id @default("generated by cuid2 extension")
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  code          String          @unique
  name          String
  GroupFunction GroupFunction[]
  I18n          I18n[]
}

model Locale {
  id               String             @id @default("generated by cuid2 extension")
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  code             String             @unique
  name             String
  Post_Translation Post_Translation[]
  I18n             I18n[]
}

model Post {
  id               String             @id @default("generated by cuid2 extension")
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  user             User               @relation(fields: [userId], references: [id])
  userId           String
  comments         Comment[]
  Post_Translation Post_Translation[]
}

model Post_Translation {
  id        String   @id @default("generated by cuid2 extension")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  body      String?
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  locale    Locale   @relation(fields: [localeId], references: [id])
  localeId  String
}

model Comment {
  id        String   @id @default("generated by cuid2 extension")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  email     String
  body      String?
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
}

model Album {
  id        String   @id @default("generated by cuid2 extension")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  photos    Photo[]
}

model Photo {
  id        String   @id @default("generated by cuid2 extension")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url       String
  albumId   String
  albums    Album    @relation(fields: [albumId], references: [id])
}

model Todo {
  id        String   @id @default("generated by cuid2 extension")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  completed Boolean
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
